<?xml version="1.0"?>
<edge_datacenters>
	<datacenter name="dc1">
		<periphery>true</periphery>
		<idleConsumption>100</idleConsumption>
		<maxConsumption>250</maxConsumption>
		<isOrchestrator>false</isOrchestrator>
		<location>
			<x_pos>100</x_pos>
			<y_pos>100</y_pos>
		</location>
		<hosts>
			<host>
				<cores>16</cores>
				<mips>29000</mips>
				<ram>32000</ram>
				<storage>1000000</storage> <!-- in MB -->
				<VMs>
					<VM>
						<cores>16</cores>
						<mips>23600</mips>
						<ram>4000</ram> <!-- in MB -->
						<storage>100000</storage> <!-- in MB -->
					</VM>
				</VMs>
			</host>
		</hosts>
	</datacenter>
	<network_links>
		<!-- To create a topology add links here. See example 3 -->
	</network_links>
</edge_datacenters>